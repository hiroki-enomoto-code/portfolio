{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": false, // strict モードを無効化
        "noImplicitAny": false, // any型を暗黙的に許可
        "noImplicitReturns": false, // 戻り値の型チェックを緩める
        "noImplicitThis": false, // thisの型チェックを緩める
        "strictNullChecks": false, // null/undefinedのチェックを緩める
        "strictFunctionTypes": false, // 関数の型チェックを緩める
        "strictPropertyInitialization": false, // プロパティ初期化チェックを緩める
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}